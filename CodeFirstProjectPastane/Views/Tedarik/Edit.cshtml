@model CodeFirstProjectPastane.Models.Tedarikci

@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="container mt-5">
    <form asp-action="Edit" asp-controller="Personel" method="post" class="mx-auto" style="max-width:1200px;">
        <input type="hidden" asp-for="TedarikciId" />

        <div class="mb-3">
            <label asp-for="TedarikciFirma" class="form-label fw-bold">Tedarikçi Firma :</label>
            <input asp-for="TedarikciFirma" type="text" class="form-control" placeholder="Tedarikçi firmayı giriniz" />
        </div>

        <div class="mb-3">
            <label asp-for="Adres" class="form-label fw-bold">Yaş :</label>
            <input asp-for="Adres" type="text" class="form-control" placeholder="Adres bilgisini girin" />
        </div>
        <div class="mb-3">
            <label asp-for="Telefon" class="form-label fw-bold">Deneyim :</label>
            <input asp-for="Telefon" type="text" class="form-control" placeholder="Telefon numarasını girin" />
        </div>
        <div class="mb-3">
            <label asp-for="Eposta" class="form-label fw-bold">E-posta :</label>
            <input asp-for="Eposta" type="text" class="form-control" placeholder="Mail adresini girin" />
        </div>


        <div class="text-center mt-4">
            <button type="submit" class="btn btn-outline-success px-4">
                Kaydet
            </button>
        </div>
    </form>
</div>