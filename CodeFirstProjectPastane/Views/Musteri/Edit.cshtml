@model CodeFirstProjectPastane.Models.Musteri
@*@{
        Layout = "~/Views/Shared/_Layout3.cshtml";
    }*@

<div class="container mt-5">
    <form asp-action="Edit" asp-controller="Musteri" method="post" class="mx-auto" style="max-width:1200px;">
        <input type="hidden" asp-for="MusteriId" />

        <div class="mb-3">
            <label asp-for="AdSoyad" class="form-label fw-bold">Müşteri Adı :</label>
            <input asp-for="AdSoyad" type="text" class="form-control" placeholder="Müşteri adını giriniz" />
        </div>

        <div class="mb-3">
            <label asp-for="Adres" class="form-label fw-bold">Adres :</label>
            <input asp-for="Adres" type="text" class="form-control" placeholder="Adres bilgisini girin" />
        </div>
        <div class="mb-3">
            <label asp-for="Telefon" class="form-label fw-bold">Telefon :</label>
            <input asp-for="Telefon" type="text" class="form-control" placeholder="Telefon numarasını girin" />
        </div>
        <div class="mb-3">
            <label asp-for="Eposta" class="form-label fw-bold">E-posta :</label>
            <input asp-for="Eposta" type="text" class="form-control" placeholder="Mail adresini girin" />
        </div>


        <div class="text-center mt-4">
            <button type="submit" class="btn btn-outline-success px-4">
                Kaydet
            </button>
        </div>
    </form>
</div>