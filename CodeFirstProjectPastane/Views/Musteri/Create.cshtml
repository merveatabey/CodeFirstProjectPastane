@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
@{
    ViewData["Title"] = "Müşteri Ekle";
}

@model CodeFirstProjectPastane.Models.Musteri

<div class="container mt-5 mb-5 px-4 py-4 border rounded bg-light shadow-sm">
    <h2 class="mb-4">Yeni Müşteri Ekle</h2>

    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="AdSoyad" class="form-label"></label>
            <input asp-for="AdSoyad" class="form-control" />
            <span asp-validation-for="AdSoyad" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Adres" class="form-label"></label>
            <input asp-for="Adres" class="form-control" />
            <span asp-validation-for="Adres" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Telefon" class="form-label"></label>
            <input asp-for="Telefon" class="form-control" />
            <span asp-validation-for="Telefon" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Eposta" class="form-label"></label>
            <input asp-for="Eposta" class="form-control" />
            <span asp-validation-for="Eposta" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </form>
</div>