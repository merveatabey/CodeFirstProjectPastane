@model CodeFirstProjectPastane.Models.Departman

@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="container mt-5">
    <form asp-action="Edit" asp-controller="Departman" method="post" class="mx-auto" style="max-width:1200px;">
        <input type="hidden" asp-for="DepartmanId" />

        <div class="mb-3">
            <label asp-for="DepartmanAdi" class="form-label fw-bold">Departman Adı :</label>
            <input asp-for="DepartmanAdi" type="text" class="form-control" placeholder="Departman adını giriniz" />
        </div>

        <div class="mb-3">
            <label asp-for="PersonelSayisi" class="form-label fw-bold">Personel Sayisi :</label>
            <input asp-for="PersonelSayisi" type="text" class="form-control" placeholder="Personel sayısını girin" />
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-outline-success px-4">
                Kaydet
            </button>
        </div>
    </form>
</div>